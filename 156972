def banner ():
     print("\033[0;32m            .88888888:.")
     time.sleep(0.1)
     print("\033[0;32m           88888888.88888.")
     time.sleep(0.1)
     print("\033[0;32m         .8888888888888888.")
     time.sleep(0.1)
     print("\033[0;32m         888888888888888888")
     time.sleep(0.1)
     print("\033[0;32m         88' _`88'_  `88888")
     time.sleep(0.1)
     print("\033[0;32m         88 88 88 88  88888")
     time.sleep(0.1)
     print("\033[0;32m         88_88_::_88_:88888")
     time.sleep(0.1)
     print("\033[0;32m         88:::,::,:::::8888")
     time.sleep(0.1)
     print("\033[0;32m         88`:::::::::'`8888")
     time.sleep(0.1)
     print(" \033[0;32m      .88  `::::'    8:88.")
     time.sleep(0.1)
     print(" \033[0;32m      8888            `8:888.")
     time.sleep(0.1)
     print("\033[0;32m     .8888'             `888888.")
     time.sleep(0.1)
     print("\033[0;32m    .8888:..  .::.  ...:'8888888:.")
     time.sleep(0.1)
     print("\033[0;32m   .8888.'     :'     `'::`88:88888")
     time.sleep(0.1)
     print("\033[0;32m  .8888        '         `.888:8888.")
     time.sleep(0.1)
     print("\033[0;32m  888:8         .           888:88888 ")
     time.sleep(0.1)
     print("\033[0;32m .888:88        .:           888:88888:")
     time.sleep(0.1)
     print("\033[0;32m  8888888.       ::           88:888888")
     time.sleep(0.1)
     print("\033[0;32m `.::.888.      ::          .88888888")
     time.sleep(0.1)
     print("\033[0;32m.::::::.888.    ::         :::`8888'.:.")
     time.sleep(0.1)
     print("\033[0;32m::::::::::.888   '         .::::::::::::")
     time.sleep(0.1)
     print("\033[0;32m ::::::::::::.8    '      .:8::::::::::::.")
     time.sleep(0.1)
     print("\033[0;32m .::::::::::::::.        .:888:::::::::::::")
     time.sleep(0.1)
     print("\033[0;32m :::::::::::::::88:.__..:88888:::::::::::'")
     time.sleep(0.1)
     print("\033[0;32m  `'.:::::::::::88888888888.88:::::::::' ")
     time.sleep(0.1)
     print(" \033[0;32m       `':::_:' -- '' -'-' `':_::::'`")
banner()
